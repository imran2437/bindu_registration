<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Access Rights for Public Users -->
        <record id="model_bindu_registration_access" model="ir.model.access">
            <field name="name">bindu.registration access</field>
            <field name="model_id" ref="model_bindu_registration"/>
            <field name="group_id" ref="base.group_public"/> <!-- Public Group -->
            <field name="perm_read" eval="1"/> <!-- Allow Read Access -->
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

    </data>
</odoo>
